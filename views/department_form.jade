extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Department Name:
      input#name.form-control(type='text', placeholder='Butcher, Bakery, etc' name='name' value=(undefined===department ? '' : department.name))

      label(for='description') Description:
      input#description.form-control(type='text' placeholder='Description' name='description' required='true' value=(undefined===department ? '' : deparment.description) )
    
    button.btn.btn-primary(type='submit') Submit
  if errors
   ul
    for error in errors
     li!= error.msg
